<Window x:Class="SymbolFinder.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SymbolFinder"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="TextboxSearch" Width="200" Margin="15 5 5 5" KeyDown="TextboxSearch_KeyDown">
                    <TextBox.Style>
                        <Style TargetType="TextBox" xmlns:sys="clr-namespace:System;assembly=mscorlib">
                            <Style.Resources>
                                <VisualBrush x:Key="CueBannerBrush" AlignmentX="Left" AlignmentY="Center" Stretch="None">
                                    <VisualBrush.Visual>
                                        <Label Content="Search symbol name" Foreground="LightGray" />
                                    </VisualBrush.Visual>
                                </VisualBrush>
                            </Style.Resources>
                            <Style.Triggers>
                                <Trigger Property="Text" Value="{x:Static sys:String.Empty}">
                                    <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                </Trigger>
                                <Trigger Property="Text" Value="{x:Null}">
                                    <Setter Property="Background" Value="{StaticResource CueBannerBrush}" />
                                </Trigger>
                                <Trigger Property="IsKeyboardFocused" Value="True">
                                    <Setter Property="Background" Value="White" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </TextBox.Style>
                </TextBox>

                <Button Click="ClickSearch" Width="60" Margin="5" Content="Search"/>
                <CheckBox x:Name="CheckboxShowHidden" IsChecked="{Binding ShowHiddenSymbols, Mode=TwoWay}"  Content="Show hidden" Margin="5" VerticalAlignment="Center"/>
                <TextBlock x:Name="TextblockSearchCount" Text="..." VerticalAlignment="Center" Margin="20 5 5 5" Foreground="Gray"/>
            </StackPanel>
        </Grid>

        <Grid Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0">
                    <ListView x:Name="ResultBox" Margin="5" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" MouseDoubleClick="ResultBox_MouseDoubleClick" KeyDown="ResultBox_KeyDown" FontSize="15">
                        <ListView.View>
                            <GridView AllowsColumnReorder="False"
                                      ColumnHeaderToolTip="Code">
                                <GridViewColumn DisplayMemberBinding="{Binding CodePoint}" Header="Code" Width="100"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Symbol}" Header="Symbol" Width="50"/>
                                <GridViewColumn DisplayMemberBinding="{Binding Name}" Header="Name" Width="300"/>

                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
                <Grid Grid.Column="1" Background="LightGray">
                    <StackPanel>
                        <TextBlock x:Name="TextblockSymbolName" Margin="10" FontSize="15" Text="Symbol name"/>
                        <TextBlock x:Name="TextblockSymbolCodepoint" Margin="10" FontSize="15" Text="Codepoint"/>
                        <TextBlock x:Name="TextblockSymbolGraphic" Margin="10" FontSize="50" HorizontalAlignment="Center" Text="S"/>
                        <TextBlock x:Name="TextblockSymbolInfo" Margin="10" FontSize="15" Text="More information"/>
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Grid>
</Window>
